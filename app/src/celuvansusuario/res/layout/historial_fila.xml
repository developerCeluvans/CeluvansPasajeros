<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F6F6"
    android:orientation="horizontal"
    android:paddingTop="10sp" 
    android:paddingBottom="10sp">

    <ImageView
        android:id="@+id/fotoTaxista"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/foto" 
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_weight="0.7"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nombre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre" />

        <TextView
            android:id="@+id/placa"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/placa" />

        <TextView
            android:id="@+id/marca"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/marca" />

        <TextView
            android:id="@+id/telefonoTaxista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/llamar"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff" />

        <!--<ImageView-->
            <!--android:id="@+id/btn_reclamo"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:contentDescription="@string/app_name"-->
            <!--android:src="@drawable/enviar_reclamo" />-->

        <Button
            android:id="@+id/btnReclamo"
            android:layout_width="150dp"
            android:layout_height="24dp"
            android:text="Enviar reclamo"
            android:background="@color/text_red"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>